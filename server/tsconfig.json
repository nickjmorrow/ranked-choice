{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["es2019"],
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "~/*": ["src/*"]
        },
        "incremental": true
    },
    "exclude": ["node_modules", "dist"]
}
